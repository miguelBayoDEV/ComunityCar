{% extends 'base.html.twig' %}

{% block title %}Message index{% endblock %}

{% block body %}
    <h1>Message index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Texto</th>
                <th>Emisor</th>
                <th>Receptor</th>
                <th>FechaEnvio</th>
                <th>Status</th>
                <th>FechaLectura</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for message in messages %}
            <tr>
                <td>{{ message.id }}</td>
                <td>{{ message.texto }}</td>
                <td>{{ message.emisor }}</td>
                <td>{{ message.receptor }}</td>
                <td>{{ message.fechaEnvio ? message.fechaEnvio|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ message.status ? 'Yes' : 'No' }}</td>
                <td>{{ message.fechaLectura ? message.fechaLectura|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('message_show', {'id': message.id}) }}">show</a>
                    <a href="{{ path('message_edit', {'id': message.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('message_new') }}">Create new</a>
{% endblock %}
