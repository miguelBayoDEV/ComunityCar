{% extends 'base.html.twig' %}

{% block title %}Respuesta{% endblock %}

{% block body %}
    <h1>Respuesta</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ respuestum.id }}</td>
            </tr>
            <tr>
                <th>Texto</th>
                <td>{{ respuestum.texto }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{{ respuestum.fecha ? respuestum.fecha|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
