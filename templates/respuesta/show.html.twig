            </tr>
            <tr>
                <th>Autor</th>
                <td>{{ respuestum.autor }}</td>
            </tr>
            <tr>
                <th>Foto</th>
                <td>{{ respuestum.foto }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('respuesta_index') }}">back to list</a>

